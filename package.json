{
  "name": "nodejs-starter-pack",
  "version": "2.0.0",
  "description": "An API built with NodeJS, Express, Sequelize and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "install": "npm install pm2 webpack cross-env -g",
    "start": "node --max-old-space-size=2048 dist/server.js",
    "build": "webpack --config webpack.config.ts",
    "build:docker": "docker build -t nodeapp:latest .",
    "start:docker": "docker run --rm -it -p 443:443/tcp -p 80:80/tcp nodeapp:latest",
    "build:prod": "webpack --config webpack.prod.config.ts",
    "start:prod": "NODE_ENV=production pm2-runtime dist/server.js -- --production --max-old-space-size=2048 && pm2 logs --lines 1000"
  },
  "keywords": [
    "Anuitex",
    "Company"
  ],
  "author": "Anuitex",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.22",
    "@types/validator": "^10.11.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^1.7.0",
    "pm2": "^4.2.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.19.4",
    "sequelize-typescript": "^1.0.0",
    "sqlite3": "^4.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.10.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^1.7.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.0"
  }
}
